generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())

  attempts  Attempt[]
  progress  Progress[]
}



model Exam {
  id          String       @id @default(uuid())
  name        String       @unique
  description String
  createdAt   DateTime     @default(now())

  assessments Assessment[]
  progresses  Progress[]
}



model Assessment {
  id             String   @id @default(uuid())
  examId         String
  level          Int
  passPercentage Int
  createdAt      DateTime @default(now())

  exam     Exam      @relation(fields: [examId], references: [id])
  attempts Attempt[]

  @@unique([examId, level])
}





model Attempt {
  id           String   @id @default(uuid())
  userId       String
  assessmentId String
  score        Int
  accuracy     Float
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id])
  assessment Assessment @relation(fields: [assessmentId], references: [id])
}

model Progress {
  id        String   @id @default(uuid())
  userId    String
  examId    String
  level     Int
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  exam Exam @relation(fields: [examId], references: [id])

  @@unique([userId, examId])
}


